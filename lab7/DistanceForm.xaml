<Window x:Class="lab7.DistanceForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab7"
        mc:Ignorable="d"
        Title="Uppgift 7" Height="600" Width="400">
    <Grid x:Name="mainGrid" Background="#FFCECEA3">
        <GroupBox x:Name="grbSelectCoordinates" Header="Select coordinates" Width="350" Height="125" Margin="15,20,35,439"/>
        <Button x:Name="btnFirst" Content="First Coordinate" HorizontalAlignment="Left" Margin="28,55,0,0" VerticalAlignment="Top"/>
        <Button x:Name="btnSecond" Content="Second coordinate" HorizontalAlignment="Left" Margin="29,100,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtFirst" HorizontalAlignment="Left" Margin="175,55,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="txtSecond" HorizontalAlignment="Left" Margin="175,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
